    children = List(backgroundImage, text)
  }
  bottomBar.alignmentInParent_=(scalafx.geometry.Pos.BottomCenter)

  // Set the StackPane as the root of the scene
  root = rootPane
  println(s"Scene size: ${width.value} x ${height.value}")
